<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roofonclick">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/yellowhomeicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yellowhomeicon"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.SplashScreenActivity"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".Activities.CustomerHomeActivity"
            android:label="@string/title_activity_customer_home"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.RegistrationActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".Activities.Login_Activity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".Activities.Owner_Ativity"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".Activities.CustomerHomeDetailsActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".Activities.CustomerRequestViewActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".Activities.CustomerSearchDetailActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>