<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="#673AB7">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custprofile_image"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:src="@drawable/forprofile"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/custprofilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vidya Sonawane"
            android:textSize="25dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="70dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:gravity="center">

        <TextView
            android:id="@+id/custproemailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_custprofileemail"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="vidya2000@gmail.com"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/custpromobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_custprofilemobile"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="7859463784"
            android:textColor="#000"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/custprocity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_custprofilecity"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="Pune"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/custproaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_custprofileaddress"
                android:drawablePadding="20dp"
                android:padding="20dp"
                android:text="Shree Nagar"
                android:textColor="#000"
                android:textSize="20sp" />

        <Button
            android:id="@+id/custproeditbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_custeditbtn"
            android:drawableTint="#FFF"
            android:layout_marginTop="20dp"
            android:background="#43A047"/>
        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>